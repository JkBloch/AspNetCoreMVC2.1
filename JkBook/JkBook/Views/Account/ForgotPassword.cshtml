@model JkBook.Models.ForgotPasswordModel

@{
    ViewData["Title"] = "ForgotPassword";
}


<div class="container">
    <h4>Forgot Password</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            @if (Model?.EmailSent == true)
            {
                <div class="alert alert-success" role="alert">
                    <p>If you are register with us,</p>
                    <p>We have sent an email on your registred email id </p>
                </div>

            }
            else
            {
                <p class="p-0">Forgot your password?, don't worries you can reset it easy.</p>
                <form asp-action="ForgotPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>                  
                    <div class="form-group">
                        <input type="submit" value="Continue" class="btn btn-primary" />
                    </div>
                </form>
            }

        </div>
    </div>
    <div>
        <a asp-controller="Account" asp-action="Login">Login</a>
    </div>

</div>


